<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/name_contact"
        android:layout_width="250dp"
        android:layout_height="22dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="14dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:gravity="left"
        android:text="TextView"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/phone_contact"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_contact"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="14dp"
        android:layout_marginLeft="50dp" />

    <TextView
        android:id="@+id/phone_contact"
        android:layout_width="250dp"
        android:layout_height="22dp"
        android:layout_marginEnd="14dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="5dp"
        android:gravity="left"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_contact"
        app:layout_constraintTop_toBottomOf="@+id/name_contact"
        android:layout_marginRight="14dp"
        android:layout_marginLeft="50dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_contact"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/contact_image"
        android:layout_marginLeft="16dp"
        tools:ignore="VectorDrawableCompat" />

</androidx.constraintlayout.widget.ConstraintLayout>